{{render "box" content}}

<form class="box-edit" role="form">
	<div class="form-group">
		<label>Description</label>
		{{input value=description class="form-control"}}
	</div>
	<div class="form-group form-inline">
		<label>Width</label>
		{{input value=width class="form-control"}}

		<label>Height</label>
		{{input value=height class="form-control"}}
	</div>

	<button class="btn btn-primary" {{action saveBox}}>
		Save
	</button>

	<button class="btn btn-warning" {{action cancelBox}}>
		Cancel
	</button>
</form>